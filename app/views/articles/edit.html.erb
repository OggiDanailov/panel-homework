<h2 class='title-main'>Edit Article page</h2>

<%= form_for @article  do |f| %>
	<div class='main-list'>
		<div class='main-list'>Article's Title <%= f.text_field :title %></div>
		<div class='cktext-form'><%= f.cktext_area :content, rows: 10 %></div>
		<div class='elements'><%= f.submit class: 'btn btn-default' %>	
		</div>

	</div>
	<% end %>

	<%= button_to 'Delete Article', article_path(@article), class: 'btn btn-default',  method: :delete %>