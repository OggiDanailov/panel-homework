<h1>Profile of <%= @instructor.fname %> <%= @instructor.lname %></h1>



<div><%= @instructor.email %></div>
<% @instructor.cohorts.each_with_index do |c, index| %>
<div><%= index + 1%> <%=c.name %></div>
<% end %>


<% if current_instructor %>
	<h2>Create a new cohort</h2>

	<%= form_for @cohort do |f| %>
	 <div style='width: 50%'>Name:<%= f.cktext_area :name, rows: 10 %></div>
	 <%#= f.text_field :name %>
	<div>Options for course: <%= f.select :course_id, options_from_collection_for_select(Course.all, "id", "name") %></div>
	<%= f.submit %>
	<% end %>
<% end %>